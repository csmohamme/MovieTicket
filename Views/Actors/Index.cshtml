@model IEnumerable<Actor>
@{
    ViewData["Title"] = "Actors";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table"">
            <thead >
            <tr class=" table-dark text-center">
                <th>@Html.DisplayNameFor(model => model.ProfilePictureURL)</th>
                <th>@Html.DisplayNameFor(model => model.FullName)</th>
                <th>@Html.DisplayNameFor(model => model.Bio)</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td class=" align-middle">
                        <img src="@item.ProfilePictureURL" alt="@item.FullName" style="max-width:150px"
                            class="rounded-circle">
                    </td>
                    <td class="align-middle">
                        <h3>@item.FullName</h3>
                    </td>
                    <td class="align-middle">
                        <p class="lead">@item.Bio</p>
                    </td>
                    <td class="align-middle">
                        <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i> Edit</a> |
                        <a class="btn btn-outline-warning"><i class="bi bi-eye"></i> Details</a> |
                        <a class="btn btn-outline-danger"><i class="bi bi-trash"></i> Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>