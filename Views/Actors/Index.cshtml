@model IEnumerable<Actor>
@{
    ViewData["Title"] = "Actors";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class=" table-dark text-center">
                    <th>@Html.DisplayNameFor(model => model.ProfilePictureURL)</th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Bio)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class=" align-middle">
                            <img src="@item.ProfilePictureURL" class="rounded-circle border-info" alt="@item.FullName"
                            style="max-width:150px">
                        </td>
                        <td class="align-middle">
                            <h3>@item.FullName</h3>
                        </td>
                        <td class="align-middle">
                            <p class="lead">@item.Bio</p>
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i
                                class="bi bi-pencil-square"></i> Edit</a> |
                            <a class="btn btn-outline-warning" asp-action="Details" asp-route-id="@item.Id"><i
                                class="bi bi-eye"></i> Details</a> |
                            <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id"><i
                                class="bi bi-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="text-white" style="position: fixed;right:25px;bottom:66px;">
    <a asp-controller="Actors" asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add New</a>
</div>
