@model IEnumerable<Cinema>
@{
    ViewData["Title"] = "Cinemas";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="table-dark text-center">
                    <th>@Html.DisplayNameFor(model =>model.Logo)</th>
                    <th>@Html.DisplayNameFor(model =>model.Name)</th>
                    <th>@Html.DisplayNameFor(model =>model.Description)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img src="@item.Logo" alt="@item.Name" style="max-width:150px" class="rounded-circle">
                        </td>
                        <td class="align-middle">
                            <h3>@item.Name</h3>
                        </td>
                        <td class="align-middle">
                            @item.Description
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i> Edit</a> |
                            <a class="btn btn-outline-danger"><i class="bi bi-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
